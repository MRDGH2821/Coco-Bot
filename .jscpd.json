{
  "gitignore": true,
  "ignore": [
    "**/.devcontainer/**",
    "**/.git/**",
    "**/.github/**",
    "**/.idea/**",
    "**/.rbenv/**",
    "**/.trunk/**",
    "**/.venv/**",
    "**/.vscode/**",
    "**/*.svg",
    "**/*cache*/**",
    "**/node_modules/**",
    "**/report/**",
    "**/target/**"
  ],
  "minLines": 10,
  "minTokens": 80,
  "reporters": ["html", "markdown"],
  "threshold": 0
}
